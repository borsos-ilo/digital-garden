---
import PostList from '@/components/PostList.astro'
import { defaultLocale, allLocales } from '@/config'
import Layout from '@/layouts/Layout.astro'
import { getPinnedPosts, getPostsByYear } from '@/utils/content'

export async function getStaticPaths() {
  const paths = []
  
  // Generate paths for all supported languages
  for (const lang of allLocales) {
    if (lang === defaultLocale) {
      // Default language (Polish) - no prefix
      paths.push({
        params: { index: undefined },
        props: { lang },
      })
    } else {
      // Other languages - with prefix
      paths.push({
        params: { index: lang },
        props: { lang },
      })
    }
  }
  
  return paths
}

const { lang } = Astro.props

const pinnedPosts = await getPinnedPosts(lang)
const postsByYear = await getPostsByYear(lang)
---
<Layout>
  <!-- Pinned Posts -->
  {pinnedPosts.length > 0 && (
    <section class="mb-7.5">
      <div class="uno-decorative-line"></div>
      <PostList posts={pinnedPosts} lang={lang} pinned={true} />
    </section>
  )}

  <!-- Regular Posts -->
  {[...postsByYear.entries()].map(([_year, posts]) => (
    <section class="mb-7.5">
      <div class="uno-decorative-line"></div>
      <PostList posts={posts} lang={lang} />
    </section>
  ))}
</Layout>
