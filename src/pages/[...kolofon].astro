---
import { getCollection, render } from 'astro:content'
import { defaultLocale, allLocales } from '@/config'
import Layout from '@/layouts/Layout.astro'

export async function getStaticPaths() {
  const paths = []
  
  // Generate paths for all supported languages
  for (const lang of allLocales) {
    if (lang === defaultLocale) {
      // Default language (Polish) - no prefix
      paths.push({
        params: { kolofon: 'kolofon/' },
        props: { lang },
      })
    } else {
      // Other languages - with prefix
      paths.push({
        params: { kolofon: `${lang}/kolofon/` },
        props: { lang },
      })
    }
  }
  
  return paths
}

const { lang } = Astro.props

// Get kolofon page content
const allKolofonEntries = await getCollection('kolofon')
const kolofonEntry = allKolofonEntries.find(entry => entry.data.lang === lang)
  || allKolofonEntries.find(entry => entry.data.lang === '')
const { Content } = kolofonEntry ? await render(kolofonEntry) : { Content: null }
---

<Layout>
  <!-- Decorative Line -->
  <div class="uno-decorative-line"></div>
  <!-- Kolofon Page Content -->
  <div class="heti">
    {Content && <Content />}
  </div>
</Layout>
